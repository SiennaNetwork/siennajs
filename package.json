{
  "name":        "siennajs",
  "version":     "1.0.0-rc.3",
  "description": "Interact with Sienna Network smart contracts through JS.",
  "author":      "Sienna Network",
  "license":     "MIT",
  "private":     false,

  "type": "module",
  "main": "./index.ts",
  "exports": {
    "ganesha": "./index.ts",
    "require": "./dist/cjs/index.js",
    "default": "./dist/esm/index.js"
  },
  "engines": {
    "node": "^12.16 || >=13.7"
  },

  "dependencies": {
    "@hackbg/konzola": "^1.1.1",

    "@fadroma/client": "workspace:*",
    "@fadroma/scrt":   "workspace:*",
    "@fadroma/tokens": "workspace:*",

    "@waiting/base64": "^4.2.9",
    "crypto-js":       "^4.1.1",
    "merkletreejs":    "^0.2.32",
    "secure-random":   "^1.1.2"
  },

  "devDependencies": {
    "@hackbg/izomorf": "^4.0.3",

    "concurrently":         "7.2.2",
    "typescript":           "^4.7",
    "@types/crypto-js":     "^4.1.1",
    "@types/node":          "^17.0.35",
    "@types/secure-random": "^1.1.0"
  },

  "exclude": [
    "node_modules"
  ],

  "scripts": {
    "check":     "tsc --noEmit",
    "build":     "concurrently 'npm:build:*'",
    "build:cjs": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "release":   "izomorf",
    "prepublishOnly": "npm run build"
  },

  "homepage": "https://github.com/SiennaNetwork/sienna/tree/main/frontends/siennajs#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/SiennaNetwork/sienna/tree/main/frontends/siennajs"
  },
  "bugs": {
    "url": "https://github.com/SiennaNetwork/sienna/issues"
  }
}
