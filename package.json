    "merkletreejs": "^0.2.32"
  },
  "devDependencies": {
    "@hackbg/ubik": "^1.1.2",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^28.1.7",
    "@types/node": "^17.0.45",
